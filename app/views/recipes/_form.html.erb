<%= form_for @recipe do |f| %>
  Title: <%= f.text_field :title %>
  <br>
  <%= f.fields_for :ingredients do |ing| %>
  <br>
    <%= ing.label :name %>
    <%= ing.text_field :name %>
  <br>
  <%= ing.label :quantity %>
  <%= ing.text_field :quantity %>
  <% end %>
<br><br>
  <%= f.submit %>
<% end %>
